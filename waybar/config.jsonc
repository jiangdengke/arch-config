    "custom/power": {
        "format": "<span rise='-11pt' size='125%'></span>{}", // 电源退出的显示格式
        "rotate": 0, // 是否旋转图标
        "exec": "echo ; echo  logout", // 执行的命令（当前为测试命令）
        "on-click": "logoutlaunch.sh 2", // 左键点击时执行注销脚本（参数2）
        "on-click-right": "logoutlaunch.sh 1", // 右键点击时执行注销脚本（参数1）
        "interval" : 86400, // 更新间隔为一天一次
        "tooltip": true // 启用工具提示
    },

    // 用于填充空白的模块配置 //
    "custom/l_end": {
        "format": " ", // 左端填充空格
        "interval" : "once", // 仅执行一次
        "tooltip": false // 禁用工具提示
    },

    "custom/r_end": {
        "format": " ", // 右端填充空格
        "interval" : "once", // 仅执行一次
        "tooltip": false // 禁用工具提示
    },

    "custom/sl_end": {
        "format": " ", // 左下填充空格
        "interval" : "once", // 仅执行一次
        "tooltip": false // 禁用工具提示
    },

    "custom/sr_end": {
        "format": " ", // 右下填充空格
        "interval" : "once", // 仅执行一次
        "tooltip": false // 禁用工具提示
