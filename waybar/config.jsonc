    "tray": {
        "icon-size": 15, // 系统托盘图标大小
        "rotate": 0, // 是否旋转图标
        "spacing": 5 // 系统托盘图标之间的间隔
    },


    "battery": {
        "states": {
            "good": 95, // 电池良好状态阈值
            "warning": 30, // 电池警告状态阈值
            "critical": 20 // 电池危急状态阈值
        },
        // "format": "<span color='#1793d1' size='125%'>{icon}</span> <span font_weight='ultrabold'>{capacity}%</span>", // 电池显示格式（已注释）
        "format": "<span size='125%'>{icon}</span> <span font_weight='ultrabold'>{capacity}%</span>", // 电池显示格式
        "rotate": 0, // 是否旋转图标
        "interval": 1, // 更新间隔（秒）
        "format-charging": "<span color='#00FFAB' size='130%'>󰂄</span> {capacity}%", // 充电时的显示格式
        "format-plugged": " {capacity}%", // 插入电源时的显示格式
        "format-alt": "{time} {icon}", // 备用显示格式
        "format-icons": [
            "<span color='#FF8080'>󰂃</span>",
            "<span color='#FF8080'>󰁺</span>",
            "<span color='#FF8080'>󰁻</span>",
            "<span color=#F6F193'>󰁼</span>",
            "<span color='#F6F193'>󰁽</span>",
            "<span color='#F6F193'>󰁾</span>",
            "<span color='#9DDE8B'>󰁿</span>",
            "<span color='#9DDE8B'>󰂀</span>",
            "<span color='#40A578'>󰂁</span>",
            "<span color='#40A578'>󰂂</span>",
            "<span color='#40A2E3'>󰁹</span>"
        ] // 不同电池状态的图标
    },

